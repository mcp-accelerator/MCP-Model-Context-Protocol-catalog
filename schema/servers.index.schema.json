{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "MCP Servers Index",
  "type": ["object","array"],
  "oneOf": [
    {
      "type": "object",
      "required": ["servers"],
      "properties": {
        "servers": {
          "type": "array",
          "items": { "$ref": "#/$defs/server" },
          "minItems": 1
        }
      },
      "additionalProperties": false
    },
    {
      "type": "array",
      "items": { "$ref": "#/$defs/server" },
      "minItems": 1
    }
  ],
  "$defs": {
    "link": {
      "type": "string",
      "format": "uri"
    },
    "server": {
      "type": "object",
      "required": ["id","name","manifest"],
      "properties": {
        "id": { "type": "string", "minLength": 1 },
        "name": { "type": "string", "minLength": 1 },
        "description": { "type": "string" },
        "manifest": { "type": "string" },
        "manifests": {
          "type": "array",
          "items": {
            "type":"object",
            "required":["uri"],
            "properties": {
              "uri": { "type": "string", "format": "uri" },
              "note": { "type": "string" }
            },
            "additionalProperties": false
          }
        },
        "homepage": { "$ref": "#/$defs/link" },
        "repo": { "$ref": "#/$defs/link" },
        "connect": {
          "type": "object",
          "properties": {
            "endpoint_url": { "type": "string", "format": "uri" }
          },
          "additionalProperties": true
        },
        "auth": {
          "type": "object",
          "properties": {
            "token_guide_url": { "type": "string", "format": "uri" }
          },
          "additionalProperties": true
        },
        "meta": {
          "type": "object",
          "properties": {
            "description": { "type": "string" },
            "category": { "type": "string" },
            "license": { "type": "string" },
            "updated": { "type": "string", "format": "date-time" }
          },
          "additionalProperties": true
        },
        "logo": { "$ref": "#/$defs/link" }
      },
      "additionalProperties": true
    }
  }
}
