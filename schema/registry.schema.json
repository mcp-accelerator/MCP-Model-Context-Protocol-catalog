{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "MCP Registry Index",
  "type": "array",
  "items": {
    "type": "object",
    "required": ["name", "path", "category"],
    "properties": {
      "name": {
        "type": "string",
        "minLength": 1
      },
      "path": {
        "type": "string",
        "pattern": "^[a-zA-Z0-9-_/]+$"
      },
      "category": {
        "type": "string",
        "enum": ["ai", "storage", "messaging", "other"]
      },
      "badges": {
        "type": "array",
        "items": {
          "type": "string",
          "enum": ["verified", "popular", "new"]
        }
      },
      "homepage": {
        "type": "string",
        "format": "uri"
      }
    },
    "additionalProperties": false
  }
}
