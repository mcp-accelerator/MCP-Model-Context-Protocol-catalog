{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://example.com/schema/servers.index.schema.json",
  "title": "MCP Catalog Servers Index",
  "type": "object",
  "required": ["updated_at", "servers"],
  "properties": {
    "updated_at": { "type": "string", "format": "date-time" },
    "servers": {
      "type": "array",
      "items": { "$ref": "#/$defs/server" }
    }
  },
  "$defs": {
    "server": {
      "type": "object",
      "required": ["id", "name", "protocol_min", "status"],
      "properties": {
        "id": { "type": "string", "pattern": "^[a-z0-9][a-z0-9-_]{1,63}$" },
        "name": { "type": "string", "minLength": 1 },
        "protocol_min": { "type": "string", "pattern": "^20\\d{2}-\\d{2}-\\d{2}$" },
        "status": { "enum": ["stable", "beta", "alpha", "deprecated", "draft"] },
        "transports": {
          "type": "array",
          "minItems": 1,
          "uniqueItems": true,
          "items": { "enum": ["stdio", "streamable_http"] }
        },
        "primitives": {
          "type": "array",
          "minItems": 1,
          "uniqueItems": true,
          "items": { "enum": ["tools", "resources", "prompts"] }
        },
        "manifest": { "type": "string" },
        "manifests": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "path": { "type": "string" },
              "uri": { "type": "string", "format": "uri" }
            },
            "additionalProperties": false
          }
        },
        "repo": { "type": "string", "format": "uri" },
        "homepage": { "type": "string", "format": "uri" },
        "meta": {
          "type": "object",
          "properties": {
            "category": { "type": "string" },
            "license": { "type": "string" },
            "verified": { "type": "boolean" },
            "description": { "type": "string" },
            "badges": {
              "type": "array",
              "items": { "type": "string" }
            },
            "client_matrix": {
              "type": "object",
              "additionalProperties": {
                "type": "array",
                "uniqueItems": true,
                "items": { "enum": ["tools", "resources", "prompts"] }
              }
            },
            "security": { "type": "object" }
          },
          "additionalProperties": true
        }
      },
      "anyOf": [
        { "required": ["manifest"] },
        { "required": ["manifests"] }
      ],
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
